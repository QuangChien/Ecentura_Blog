<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="ecentura" translate="label" sortOrder="10">
            <label>Ecentura</label>
        </tab>
        <section id="blog" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Blog</label>
            <tab>ecentura</tab>
            <resource>Ecentura_Blog::blog_configuration</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General Configuration</label>
                <field id="total_post_per_page" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Total posts</label>
                    <comment>Total number of posts on 1 page</comment>
                </field>
                <field id="total_post_news" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Total latest posts</label>
                    <comment>Total number of latest posts displayed in sidebar</comment>
                </field>
                <field id="instagram_link" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Instagram link</label>
                    <comment>Note: the path must contain http:// or https://</comment>
                </field>
            </group>

            <group id="config_page" translate="label" type="text" sortOrder="20" showInDefault="1"
                   showInWebsite="0" showInStore="0">
                <label>Search engine optimization for all posts page</label>
                <field id="meta_title" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0"
                       showInStore="0">
                    <label>Meta title</label>
                </field>
                <field id="meta_description" translate="label" type="text" sortOrder="1" showInDefault="1"
                       showInWebsite="0" showInStore="0">
                    <label>Meta description</label>
                </field>

                <field id="meta_keywords" translate="label" type="text" sortOrder="1" showInDefault="1"
                       showInWebsite="0" showInStore="0">
                    <label>Meta keywords</label>
                </field>
            </group>
        </section>
    </system>
</config>
